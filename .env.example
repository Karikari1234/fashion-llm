# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster0.example.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
MONGODB_DB=fashionai

# Environment
NODE_ENV=development

# Database Configuration
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=5
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SOCKET_TIMEOUT_MS=30000

# Other Configuration
API_URL=http://localhost:3000/api

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LLM Configuration
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro
GEMINI_TIMEOUT_MS=30000
GEMINI_MAX_RETRIES=3

# Only use NEXT_PUBLIC_ variables if you need client-side access
# NEXT_PUBLIC_GEMINI_API_KEY should be used with caution and only when absolutely necessary
# NEXT_PUBLIC_GEMINI_API_KEY=your-public-gemini-api-key
